    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-sucrase": "^4.0.4",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.1",
    "gl-matrix": "^3.4.3",
    "gl-matrix-wasm": "^0.8.0",
    "http-server": "^14.1.0",
    "rollup": "^2.75.0",
    "rollup-plugin-terser": "^7.0.2",
    "zx": "^6.1.0"
  }
